{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "pip",
      "args": [
        "install",
        "-r",
        "backend/requirements.txt"
      ],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run FastAPI",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "cd ${workspaceFolder}/backend && source ${workspaceFolder}/.venv/bin/activate && uvicorn main:app --reload"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "cd ${workspaceFolder}/frontend && source ${NVM_DIR:-$HOME/.nvm}/nvm.sh && nvm use && npm run dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "vite Ã¼ber nvm"
    },
    {
      "label": "Run Full Stack",
      "type": "shell",
      "command": "echo",
      "args": [
        "Full Stack started"
      ],
      "dependsOn": [
        "Run FastAPI",
        "Run Frontend"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
